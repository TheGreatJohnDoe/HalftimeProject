
@{
    ViewBag.Title = "Create User";
}

<h2></h2>

@ViewData["Name"]
@ViewData["isAdmin"]
@using (Html.BeginForm("CreateUserBy", "NewRequests", FormMethod.Post))
{
    <form>
        <div class="form-group row">
            <label for="input" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input class="form-control" name="Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="input" class="col-sm-2 col-form-label">Given Name</label>
            <div class="col-sm-10">
                <input class="form-control" name="GivenName">
            </div>
        </div>
        <div class="form-group row">
            <label for="input" class="col-sm-2 col-form-label">Surname</label>
            <div class="col-sm-10">
                <input class="form-control" name="Surname">
            </div>
        </div>
        <div class="form-group row">
            <label for="input" class="col-sm-2 col-form-label">Account Name</label>
            <div class="col-sm-10">
                <input class="form-control" name="AccountName">
            </div>
        </div>
        <div class="form-group row">
            <label for="input" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input class="form-control" name="Password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Apply</button>
            </div>
        </div>
    </form>
}

